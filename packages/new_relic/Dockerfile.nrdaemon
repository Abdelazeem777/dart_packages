FROM golang:1.13.8-buster as newrelic-daemon-builder

RUN apt-get update && apt-get install build-essential -y

RUN wget https://github.com/newrelic/c-sdk/archive/v1.3.0.tar.gz

RUN tar xfvz v1.3.0.tar.gz

RUN cd c-sdk-1.3.0 && make daemon && pwd && ls -lah

CMD /go/c-sdk-1.3.0/newrelic-daemon --address newrelic:7878 --watchdog-foreground
